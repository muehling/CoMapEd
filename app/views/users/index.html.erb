<div class="row">
  <div class = "col-md-2"></div>
  <div class = "col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">

        <table class = "table">
          <thead>
          <td><%= t('email') %></td><td><%= t('projects.text') %></td><td><%= t('maps') %></td><td></td>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td><td><%= user.projects.count %></td><td><%= user.concept_map_count %></td>
              <td>
                <%= link_to raw("<span class='glyphicon glyphicon-pencil'></span>"), edit_user_path(user) %>
              &nbsp;
                <%= link_to_unless @user == user, raw("<span class='glyphicon glyphicon-trash'></span>"), user_path(user), method: :delete, data: {confirm: t('are_you_sure')}%>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= link_to t('users.new'), new_user_path, class: 'btn btn-default'%>

      </div>
    </div>
  </div>
  <div class = "col-md-2"></div>
</div>