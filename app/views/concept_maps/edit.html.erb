              $("#entry_concept").addClass("hidden");
              $("#delete").removeClass("hidden");
              $("#form").attr('action', '<%= concept_map_links_path(@map) %>/' + id);
              $("#form").attr('method', 'put');
              $("#entry_link").focus();
              $("#currentColor").hide();
                break;
