    function validateForm() {
      if (mode == addNode || mode == editNode) {
        t = $('#entry_concept').val();
        hideForm();
        node = nodes.get({
          filter: function (item) {
            return (item.label.toLocaleLowerCase() === t.toLocaleLowerCase());
          }
        });

        if (node == null||oldColor!=color){
            return true;
        }
        else {
            network.focus(node[0].id);
            return false;
        }
      }
      else {
          hideForm();
        return true;
      }

    }

