<%= form_tag(url_for(controller:'application', action: 'login'), class: "form") do %>
    <div class="from-group" >
      <label class="control-label" for="email"><%= t('.email')%></label>
      <%= text_field_tag "email", nil, type: "text", class: "form-control"%>
    </div>
    <br/>
    <div class="from-group" >
      <label class="control-label" for="password"><%= t('.password')%></label>
      <%= text_field_tag "password", nil, type: "password", class: "form-control"%>
    </div>
    <br/>
    <%= submit_tag t('login'), class: "btn btn-primary" %>
<% end %>

