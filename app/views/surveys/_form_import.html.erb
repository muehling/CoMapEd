<div class="panel panel-default">
  <div class="panel-heading">
    <%= t('surveys.import') %>
  </div>
  <div class="panel-body">
    <%= form_for([@user, @project, @survey], class: "form") do |f| %>
        <div class="form-group <%= "has-error" unless @project.errors[:name].blank? %>">
          <%= f.label t('file'), class: "control-label" %>
          <%= f.file_field "file" %>
        </div>
        <div class="form-group">
          <%= f.submit t('import'), :class => "btn btn-primary" %>
          <button type="button" class="btn btn-default" onclick="cancelForm()"><%= t('cancel') %></button>
        </div>
    <% end %>
  </div>
</div>

<script>
    function cancelForm() {
      $('#new_survey').html("<%= escape_javascript render('new.html.erb') %>");
    }
</script>